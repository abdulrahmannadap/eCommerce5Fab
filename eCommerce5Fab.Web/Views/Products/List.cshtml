
    <table class="table table-bordered table-hover table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Selected Item </th>
                <th>Actions </th>
            </tr>

        </thead>
        <tbody>
            @foreach(var prod in Model)
            {
                <tr>
                    <td>@prod.Name</td>
                    <td>@prod.Description</td>
                    <td>@prod.Price</td>
                    <td>
                        <a asp-controller="Products" asp-action="Upsert" asp-route-id="@prod.Id" class="btn btn-warning" >Edit</a>
                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@prod.Id" class="btn btn-warning" >Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
